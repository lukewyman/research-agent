# Dockerfile.worker
FROM python:3.12-slim AS builder
WORKDIR /app
RUN apt-get update && apt-get install -y --no-install-recommends build-essential && rm -rf /var/lib/apt/lists/*
RUN pip install --no-cache-dir uv

COPY pyproject.toml uv.lock ./
# UPDATED paths:
COPY packages/core/pyproject.toml        packages/core/pyproject.toml
COPY packages/retrieval/pyproject.toml   packages/retrieval/pyproject.toml
COPY packages/tasks/pyproject.toml       packages/tasks/pyproject.toml
COPY packages/feeds/pyproject.toml       packages/feeds/pyproject.toml
COPY packages/cache/pyproject.toml       packages/cache/pyproject.toml
COPY packages/api/pyproject.toml         packages/api/pyproject.toml

RUN uv venv /app/.venv
ENV VIRTUAL_ENV=/app/.venv
ENV PATH="/app/.venv/bin:$PATH"
RUN uv sync --frozen

COPY . /app
RUN uv sync --frozen

FROM python:3.12-slim AS runtime
WORKDIR /app
COPY --from=builder /app/.venv /app/.venv
COPY . /app
ENV VIRTUAL_ENV=/app/.venv
ENV PATH="/app/.venv/bin:$PATH"

# UPDATED entrypoint to newsrag_tasks
CMD ["uv","run","celery","-A","newsrag_tasks.celery_app.app","worker","-l","info","--concurrency","2"]
